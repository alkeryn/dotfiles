[bar/mainpc]
#bottom = false

tray-transparent = true 
monitor = ${env:MONITOR:HDMI-1}

;override-redirect = true
wm-restack = bspwm

width = 100%
height = 27
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2 2 
line-color = #f00
;border-size = 0 
;border-color = #ccff0000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
#font-1 = MaterialIcons:fontformat=truetype:size=8:antialias=false;0
font-1 = WunconSiji:pixelsize=10;1
font-2 = FontAwesome:pixelsize=14;0


modules-left = bspwm xwindow
modules-center = 
modules-right = filesystem mpd volume xkeyboard memory temperature cpu date

tray-position = right
tray-padding = 5
tray-background = #ffffff

[colors]
;background = ${xrdb:color0:#222}
background = #70100000
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #f55
primary = #00ffff
secondary = #e60053
alert = #bd2c40

[modules/xmenu]
menu-0 = item 1;command
